<!-- First Template -->
<%- include('header'); -%>

    <div class="box" id="heading">
        <h2><%= listTitle %></h2>
    </div>

    <div class="box">
        <% for(var i=0; i<newItem.length; i++){ %>
        <div class="item">
            <input type="checkbox">   
            <p><%= newItem[i] %></p>
        </div>    
        <% } %>
    
        <form class="item" action="/" method="post">
            <input type="text" name="item" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="submit" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include('footer'); -%>